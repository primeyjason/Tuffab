    <div class="panel" style="border-radius: 20px">
        
        <div class="container col-lg-12">
            <div id="imageBanner" class="carousel slide" data-pause="hover" style="align-content : center" data-interval="3000" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#imageBanner" data-slide-to="0" class="active"></li>
                    <li data-target="#imageBanner" data-slide-to="1"></li>
                    <li data-target="#imageBanner" data-slide-to="2"></li>


                </ol>
                <div class="carousel-inner" role="listbox">

                    @{
                    int i = 0;
                    }
                    @foreach (var item in Model)
                {

                    if (i == 0)
                    {
                            <div class="item active">
                                <!-- <img height="640" width="480" src="~/Images/image1.jpg" alt="Image 1" />-->
                                <img height=@item.Height width=@item.Width src='@Url.Action("Show", "image", new { id = item.ID })' alt="Image 1" />
                                <div class="carousel-caption">
                                    <p>@item.Caption</p>
                                </div>
                            </div>
                    }
                    else
                    {
                            <div class="item">
                                <img height=@item.Height width=@item.Width src='@Url.Action("Show", "image", new { id = item.ID })' alt="Image 1" />
                                <div class="carousel-caption">
                                    <p>@item.Caption</p>
                                </div>
                            </div>
                    }
                    i++;


                }


                </div> @* carousel inner*@
                <a class="left carousel-control" href="#imageBanner" role="button" data-slide="prev">
